<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Data</title>
    <link rel="stylesheet" href="/css/Admin.css">

</head>

<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Title</th>
            <th>Content</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th><a href="/createBlog">Create blog</a></th>
        </tr>
        <% if (locals.datas) { %>

            <% datas.forEach(data=> { %>
                <tr>
                    <td>
                        <%= data._id %>
                    </td>
                    <td>
                        <%= data.author %>
                    </td>
                    <td class="breif">
                        <%= data.title %>
                    </td>
                    <td class="breif">
                        <%= data.content %>
                    </td>

                    <td>
                        <%= data.createdAt %>
                    </td>
                    <td>
                        <%= data.updatedAt %>
                    </td>
                    <td>
                        <a class="delete" href="/api/blog/delete/<%= data._id %>/?key=123456789">Delete</a>
                        <a class="delete" href="/edit/<%= data._id %>">Edit</a>
                    </td>
                </tr>

                <% }); %>
                    <% } %>


    </table>
</body>

</html>