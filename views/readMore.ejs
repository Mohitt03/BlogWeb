<link rel="stylesheet" href="/css/main.css">



    <!-- Navbar  Section -->

    <header class="header">
        <nav class="navbar">
            <div class="div-img">
                <h3 class="navlogo">Blog Web</h3>
            </div>
            <div class="navbar-div1">
                <ul class="menu-links">
                    <li><a href="#">Home</a></li>
                    <li><a href="/about">About us</a></li>
                    <li><a href="/contact">Contact us</a></li>
                    <span id="close-menu-btn" class="material-symbols-outlined">close</span>
                </ul>

            </div>
            <div class="navbar-div2">
                <div class="div-btn">
                    <button class="book nav-btn1 b "><a href="/" class="logout login-btn">LOG OUT</a></button>
                    <span id="hamburger-btn" class="material-symbols-outlined">menu</span>
                </div>

        </nav>

    </header>







<section class="blogsec sec">
    <ul id="postsList">
        <% if (locals.blog) { %>
            <div class="OuterBlog">
                <div class="HeadDiv">
                    <h2 class="blogHead">
                        <%=blog.title%>
                    </h2>
                </div>
                <div class="ImgDiv">
                    <img class="blogImg" src="<%=blog.img%>" alt="Sc1.png">
                </div>
                <div class="ContentDiv">
                    <p class="blogContent">
                        <%=blog.content%>
                    </p>
                </div>
                <div class="FooterDiv">
                    <small class="blogFooter">
                        Author: <%=blog.author%>
                    </small>
                </div>
            </div>
            <% } %>
</section>