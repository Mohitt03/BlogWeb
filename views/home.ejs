<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <!-- Google Icons Link -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0">
    <!-- Google Fonts Link For Icons -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link rel="stylesheet" href="../css/main.css">
</head>

<body>



    <!-- Navbar  Section -->

    <header>
        <nav class="navbar">
            <div class="div-img">
                <h3 class="navlogo">Blog Web</h3>
            </div>
            <div class="navbar-div1">
                <ul class="menu-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About us</a></li>
                    <li><a href="/contact">Contact us</a></li>
                    <span id="close-menu-btn" class="material-symbols-outlined">close</span>
                </ul>

            </div>
            <div class="navbar-div2">
                <div class="div-btn">
                    <button class="book nav-btn1 b "><a href="/" class="logout login-btn">LOG OUT</a></button>
                    <span id="hamburger-btn" class="material-symbols-outlined">menu</span>
                </div>

        </nav>

    </header>

    <!-- Section 1 content -->

    <section>
        <div class="container">
            <div class="row ">
                <% Blogs.forEach(blog=> { %>
                    <a class="mainLink a col-md-4 col-sm-6 col-xs-12 mb-40" href="/readMore/<%=blog._id%>">
                        <div class="col">
                            <div class="img_sec">
                                <img class="img1" src="<%=blog.img%>" alt="Sc1.png">
                            </div>
                            <div class="txt_sec">
                                <div class="div-content">
                                    <p class="head">
                                        <%=blog.title%>
                                    </p>
                                    <p class="content">
                                        <%=blog.content%>
                                    </p>
                                </div>
                                <div class="row ">
                                    <p class="author">
                                        <%=blog.author%>
                                    </p>
                                    <p class="date">
                                        <%= blog.date %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>

                    <% }); %>


            </div>
        </div>
    </section>





    <!--GOOGLE FONTS-->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Play&display=swap" rel="stylesheet">
    </head>

    <body>
        <footer>
            <div class="footer">
                <div class="row">
                    <a href=""><img class="logo logo1" src="images/facebook (1).png" alt="" srcset=""></a>
                    <a href=""><img class="logo logo2" src="images/instagram (1).png" alt="" srcset=""></a>
                    <a href=""><img class="logo logo3" src="images/twitter (1).png" alt="" srcset=""></a>
                    <a href=""><img class="logo logo4" src="images/youtube.png" alt="" srcset=""></a>




                </div>

                <div class="row">
                    <ul>
                        <li><a href="#">Contact us</a></li>
                        <li><a href="#">Our Services</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                        <li><a href="#">Career</a></li>
                    </ul>
                </div>

                <div class="row">
                    Copyright Â© 2021 - All rights reserved
                </div>
            </div>
        </footer>


    </body>

    <script>
        const header = document.querySelector("header");
        const hamburgerBtn = document.querySelector("#hamburger-btn");
        const closeMenuBtn = document.querySelector("#close-menu-btn");

        // Toggle mobile menu on hamburger button click
        hamburgerBtn.addEventListener("click", () => header.classList.toggle("show-mobile-menu"));

        // Close mobile menu on close button click
        closeMenuBtn.addEventListener("click", () => hamburgerBtn.click());
    </script>

</html>